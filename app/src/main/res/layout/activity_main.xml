<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dataReceived"
        android:layout_width="334dp"
        android:layout_height="587dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="50dp"
        android:inputType="textMultiLine"
        android:maxLines="50"
        android:padding="5dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:orientation="horizontal" >

        <Button
         android:id="@+id/buttonConnec"
         android:layout_width="100dp"
         android:layout_height="60dp"
         android:onClick="ConnectToMQTTServer"
         android:text="@string/button_connect_txt"
         android:layout_toRightOf="@+id/button_getDeviceSettings"
         app:layout_constraintTop_toTopOf="parent"/>

        <Button
        android:id="@+id/button_getDeviceSettings"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:onClick="getDeviceSettings"
        android:text="@string/button_getdevicesettings"
        android:layout_toRightOf="@+id/button_configDeviceSettings"
        app:layout_constraintTop_toTopOf="parent"/>

        <Button
         android:id="@+id/button_configDeviceSettings"
         android:layout_width="120dp"
         android:layout_height="60dp"
         android:onClick="setDeviceConfiguration"
         android:text="@string/button_config_device_txt"
         app:layout_constraintTop_toTopOf="parent"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>